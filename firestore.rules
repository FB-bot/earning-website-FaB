rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function loggedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return loggedIn() &&
      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    match /users/{uid} {
      allow read: if loggedIn() && (request.auth.uid == uid || isAdmin());
      allow create: if loggedIn() && request.auth.uid == uid;
      allow update: if isAdmin();
    }

    match /adsConfig/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /adHistory/{id} {
      allow create: if loggedIn();
      allow read: if isAdmin();
    }

    match /withdrawRequests/{id} {
      allow create: if loggedIn();
      allow read: if loggedIn() && resource.data.uid == request.auth.uid;
      allow update: if isAdmin();
    }
  }
}
